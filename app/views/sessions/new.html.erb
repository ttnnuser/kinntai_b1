<% provide(:title, "ログイン") %>
<h1>ログイン</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(:session, url: login_path) do |f| %>
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, class: 'form-control' %>
          
          <%= f.label :パスワード %>
          <%= f.password_field :password, class: 'form-contorl' %>
          
          <%= f.submit "Log in" , class: "btn btn-primary" %>
        <% end %>
        
        <p>アカウント作成は<%= link_to "こちらから", signup_path %></p>
    </div>
</div>
