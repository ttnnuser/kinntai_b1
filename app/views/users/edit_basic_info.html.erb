<% provide(:title, "基本情報編集") %>

<h1>基本情報の編集</h1>

<div class="row" >
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(:user, url: basic_info_path) do |f| %>
        
        <%= f.label :指定勤務時間 %>
        <%= time_field :basic_time, class: 'form-control' %>
        
        <%= f.label :基本勤務時間 %>
        <%= time_field :work_time, class: 'form-control' %>
        
        <%= f.submit "編集", class: "btn btn-primary" %>
      <% end %>
    </div>
</div>