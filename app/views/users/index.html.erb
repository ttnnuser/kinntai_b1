<% provide(:title, '一覧') %>

<% if params[:search].nil? %>
  <h1>全てのユーザー</h1>
<% else %>
  <h1>検索結果</h1>
<% end %>
<!--  検索拡張機能  -->
<div class="container pull-right">
  <p>ユーザー名検索</p>
  <%= form_tag(users_path, :method => 'get' ) do %>
    <%= text_field_tag :search,'', class: 'form-control', placeholder: "キーワードを入力・・・" %>
    <%= submit_tag '検索', class: 'btn btn-primary', :name => nil %>
  <% end %>
</div>
<div class="container">
<%= will_paginate @users, :previous_label => '前へ', :next_label => '次へ' %>

<ul class="users">
  <%= render @users %>
</ul>

<%= will_paginate @users, :previous_label => '前へ', :next_label => '次へ' %>
</div>